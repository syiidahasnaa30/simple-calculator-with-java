<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/proses_id"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:textSize="30sp"
        android:textStyle="normal"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/result_id"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_below="@id/proses_id"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/startButton"
        android:onClick="startClicked"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/result_id"
        android:backgroundTint="@color/green"
        android:text="@string/start"
        android:textColor="@color/tosca" />

    <Button
        android:id="@+id/percentageButton"
        android:onClick="buttonPercentage"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/result_id"
        android:layout_toEndOf="@id/startButton"
        android:backgroundTint="@color/green"
        android:text="@string/percentage"
        android:textColor="@color/black"
        tools:ignore="UsingOnClickInXml" />
    <Button
        android:id="@+id/deleteButton"
        android:onClick="buttonDelete"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/result_id"
        android:layout_toRightOf="@id/percentageButton"
        android:backgroundTint="@color/green"
        android:text="@string/delete"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/divisionButton"
        android:onClick="buttonDivision"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/result_id"
        android:layout_toRightOf="@id/deleteButton"
        android:backgroundTint="@color/green"
        android:text=":"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/Button7"
        android:onClick="button7"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/startButton"
        android:backgroundTint="@color/green"
        android:text="@string/seven"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/Button8"
        android:onClick="button8"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/percentageButton"
        android:layout_toRightOf="@id/Button7"
        android:backgroundTint="@color/green"
        android:text="@string/eight"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/Button9"
        android:onClick="button9"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/deleteButton"
        android:layout_toRightOf="@id/Button8"
        android:backgroundTint="#FFD3E0EA"
        android:text="9"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/multiplyButton"
        android:onClick="buttonMultiply"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/divisionButton"
        android:layout_toRightOf="@id/Button9"
        android:backgroundTint="@color/green"
        android:text="*"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/Button4"
        android:onClick="button4"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/Button7"
        android:backgroundTint="@color/green"
        android:text="4"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/Button5"
        android:onClick="button5"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/Button8"
        android:layout_toRightOf="@id/Button4"
        android:backgroundTint="@color/green"
        android:text="5"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/Button6"
        android:onClick="button6"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/Button9"
        android:layout_toRightOf="@id/Button5"
        android:backgroundTint="@color/green"
        android:text="6"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/plusButton"
        android:onClick="buttonPlus"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/multiplyButton"
        android:layout_toRightOf="@id/Button6"
        android:backgroundTint="@color/green"
        android:text="+"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/Button1"
        android:onClick="button1"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/Button4"
        android:backgroundTint="@color/green"
        android:text="1"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/Button2"
        android:onClick="button2"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/Button5"
        android:layout_toRightOf="@id/Button1"
        android:backgroundTint="@color/green"
        android:text="2"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/Button3"
        android:onClick="button3"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/Button6"
        android:layout_toRightOf="@id/Button2"
        android:backgroundTint="@color/green"
        android:text="3"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/minusButton"
        android:onClick="buttonMinus"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/plusButton"
        android:layout_toRightOf="@id/Button3"
        android:backgroundTint="@color/green"
        android:text="-"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/Button0"
        android:onClick="button0"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/Button1"
        android:backgroundTint="@color/green"
        android:text="0"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/bilanganButton"
        android:onClick="buttonBilangan"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/Button2"
        android:layout_toRightOf="@id/Button0"
        android:backgroundTint="@color/green"
        android:text="+ / -"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/pointButton"
        android:onClick="buttonPoint"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/Button3"
        android:layout_toRightOf="@id/bilanganButton"
        android:backgroundTint="@color/green"
        android:text="."
        android:textColor="@color/black" />

    <Button
        android:id="@+id/equalsButton"
        android:onClick="buttonEquals"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@id/minusButton"
        android:layout_toRightOf="@id/pointButton"
        android:backgroundTint="@color/green"
        android:text="="
        android:textColor="@color/black" />
</RelativeLayout>